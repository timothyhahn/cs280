<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#8db6dc"
    >
    
    <LinearLayout android:layout_width="fill_parent"
                  android:id="@+id/home_layout"
                  android:orientation="vertical"
                  android:layout_height="wrap_content">
    
    <com.example.inquizition.AutoResizeTextView
        android:id="@+id/questionText"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="top"
        android:singleLine="false"
        android:text="From 1701 to 1713 Europe was embroiled in what Americans call Queen Anne&apos;s War. What do Europeans call it?"
        android:textColor="#ffffff"
        android:textSize="18sp" />
    </LinearLayout>

  <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:layout_gravity="bottom"
                  android:layout_alignParentBottom="true"
                  android:layout_below="@+id/home_layout"
                  android:orientation="vertical">

      <LinearLayout
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:gravity="fill_horizontal"
          android:orientation="horizontal" >

      <TextView
          android:id="@+id/correctText"
                    android:layout_width="0dp"
          android:layout_weight="0.3"
          android:gravity="left"
          android:layout_height="wrap_content"
          android:layout_marginLeft="10dp" 
          android:text="Correct!"       
           android:textColor="#005500"
        android:textSize="18sp" />
      
            <TextView
          android:id="@+id/correctText"
          android:layout_width="0dp"
          android:layout_weight="0.3"
          android:gravity="right"
          android:layout_height="wrap_content"
          android:layout_marginRight="10dp" 
          android:text="Score: 272"       
           android:textColor="#005500"
        android:textSize="18sp" />
      </LinearLayout>

    <ListView
        android:id="@+id/answerListView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:numColumns="1"
		android:layout_gravity="bottom">

    </ListView>
    
    </LinearLayout>

</RelativeLayout>
