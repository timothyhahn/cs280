<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#8db6dc"
    android:orientation="vertical" 
 >
    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:background="#7aaedf"
         android:paddingTop="15dp"
        android:paddingBottom="15dp">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/inquizitionlogo" />

        <TextView
            android:id="@+id/textTagLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="Nobody expects us!"
            android:textColor="#ffffff"
            android:textSize="22sp" />
        

        
    </RelativeLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical" >

        
        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Username:"
            android:layout_marginLeft="12dp"
            android:textSize="22sp"
            android:textColor="#ffffff"
            >
            
        </TextView>
        
        <EditText
            android:id="@+id/editTextUsername"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="Guest"
            android:layout_marginBottom="50dp"
            android:textSize="22sp"
           >

            <requestFocus />
        </EditText>
        
        <ImageButton
            android:id="@+id/createGameButton"
            android:layout_width="300dp"
            android:layout_height="55dip"
            android:background="@drawable/createselector"
            android:layout_marginBottom="20dp" />
        	
        	 <ImageButton

                android:id="@+id/joinGameButton"
                android:layout_width="300dp"
                android:layout_height="55dip"

                android:background="@drawable/joingamebutton" />
            
        </LinearLayout>


</LinearLayout>
